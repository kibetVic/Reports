@model Reports.Models.County

@{
    ViewData["Title"] = "County Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle-fill me-2"></i> County Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.CountyCode)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CountyCode)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>
