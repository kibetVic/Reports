@model Reports.Models.UploadedFile
@{
    ViewData["Title"] = "File Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-2"></i>
            <h5 class="mb-0">File Details</h5>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">File Name</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-light text-dark p-2">@Model.FileName</span>
                </dd>

                <dt class="col-sm-3 fw-bold">File Type</dt>
                <dd class="col-sm-9">
                    @if (Model.FileType == "Image")
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-image-fill me-1"></i> Image
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            <i class="bi bi-file-earmark-text me-1"></i> Document
                        </span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">File Path</dt>
                <dd class="col-sm-9">
                    <a href="@Model.FilePath" target="_blank" class="text-decoration-none">
                        <i class="bi bi-link-45deg"></i> View File
                    </a>
                </dd>
            </dl>

            @if (Model.FileType == "Image")
            {
                <div class="mt-4">
                    <img src="@Model.FilePath" alt="@Model.FileName" class="img-thumbnail shadow-sm" style="max-width: 250px;" />
                </div>
            }
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        </div>
    </div>
</div>

