@model Reports.Models.Summary

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">Summary Form</h3>
                </div>
                <div class="card-body p-4">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="PaymentVoucherId" class="form-label fw-semibold">Voucher Number</label>
                                <select asp-for="PaymentVoucherId" class="form-select" asp-items="ViewBag.PaymentVoucherId"></select>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Venue" class="form-label fw-semibold">Venue</label>
                                <input asp-for="Venue" class="form-control" placeholder="Venue eg Chemitan" />
                                <span asp-validation-for="Venue" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="CountyId" class="form-label fw-semibold">County</label>
                                <select asp-for="CountyId" class="form-select" asp-items="ViewBag.CountyId"></select>
                            </div>

                            <div class="col-md-3 d-flex align-items-center">
                                <div class="form-check mt-4">
                                    <input asp-for="IsPaid" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsPaid" class="form-check-label">Paid?</label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="HallHireNo" class="form-label fw-semibold">NO of Hall's</label>
                                <input asp-for="HallHireNo" class="form-control" />
                                <span asp-validation-for="HallHireNo" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="EachHallAmount" class="form-label fw-semibold">Amount per Hall</label>
                                <input asp-for="EachHallAmount" class="form-control" />
                                <span asp-validation-for="EachHallAmount" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="MpesaChargesPerHall" class="form-label fw-semibold">Mpesa Charges Per Hall</label>
                                <input asp-for="MpesaChargesPerHall" class="form-control" />
                                <span asp-validation-for="MpesaChargesPerHall" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="LeadFarmersNo" class="form-label fw-semibold">No. of Lead Farmers</label>
                                <input asp-for="LeadFarmersNo" class="form-control" />
                                <span asp-validation-for="LeadFarmersNo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="EachLeadFarmersAmount" class="form-label fw-semibold">Amount per Farmer</label>
                                <input asp-for="EachLeadFarmersAmount" class="form-control" />
                                <span asp-validation-for="EachLeadFarmersAmount" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MpesaChargesPerLeadFarmers" class="form-label fw-semibold">Mpesa Charges PerLead Farmers</label>
                                <input asp-for="MpesaChargesPerLeadFarmers" class="form-control" />
                                <span asp-validation-for="MpesaChargesPerLeadFarmers" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="EANo" class="form-label fw-semibold">Number of E.A</label>
                                <input asp-for="EANo" class="form-control" />
                                <span asp-validation-for="EANo" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="EachEAAmount" class="form-label fw-semibold">Amount per E.A</label>
                                <input asp-for="EachEAAmount" class="form-control" />
                                <span asp-validation-for="EachEAAmount" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MpesaChargesPerEA" class="form-label fw-semibold">Mpesa Charges Per EA</label>
                                <input asp-for="MpesaChargesPerEA" class="form-control" />
                                <span asp-validation-for="MpesaChargesPerEA" class="text-danger small"></span>
                            </div>
                        </div>

                        <h4 class="mt-4">Failed Amount and Description</h4>
                        <div class="row mb-3 border p-3 rounded bg-light">
                            <div class="col-md-4">
                                <label asp-for="FailedDesc" class="form-label fw-bold">FAiled Description</label>
                                <input asp-for="FailedDesc" class="form-control" placeholder="Enter the failed Amount" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="FailedAmt" class="form-label fw-bold">FAiled Amont</label>
                                <input asp-for="FailedAmt" class="form-control" placeholder="Enter the failed Amount" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-warning text-dark px-5">Save Summary</button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">← Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
