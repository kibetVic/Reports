@model Reports.Models.Summary

@{
    ViewData["Title"] = "Delete Summary";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-trash me-2"></i> Delete Summary</h4>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Are you sure you want to <strong>delete</strong> this summary? This action cannot be undone.
            </div>

            <dl class="row">
                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Voucher)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Voucher.PaymentInFavourOf)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Venue)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Venue)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.County)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.County.Name)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.HallHireNo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HallHireNo)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.EachHallAmount)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EachHallAmount)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.MpesaChargesPerHall)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MpesaChargesPerHall)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.HallHireTotal)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HallHireTotal)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.LeadFarmersNo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LeadFarmersNo)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.EachLeadFarmersAmount)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EachLeadFarmersAmount)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.MpesaChargesPerLeadFarmers)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MpesaChargesPerLeadFarmers)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.LeadFarmersTotal)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LeadFarmersTotal)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.EANo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EANo)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.EachEAAmount)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EachEAAmount)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.MpesaChargesPerEA)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MpesaChargesPerEA)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.EATotal)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EATotal)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.SubTotalperVenue)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SubTotalperVenue)</dd>

                <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.TotalSum)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalSum)</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>
