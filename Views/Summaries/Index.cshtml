@model IEnumerable<Reports.Models.Summary>

@{
    ViewData["Title"] = "Summaries";
}

<style>
    .table td,
    .table th {
        padding: 4px 8px !important;
        font-size: 12px;
        line-height: 1.2;
    }

    .table tbody tr {
        height: auto !important;
    }
</style>

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-light border-bottom">
            <div class="card-header bg-light border-bottom mb-3">
                 <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold text-primary">📊 Summaries</h2>
                 </div>
                 
                 <!-- 🔎 Universal Search Bar -->
                 <div class="d-flex gap-2 flex-wrap mb-3 align-items-center">
                     <div class="d-flex gap-2 flex-grow-1">
                         <input type="text" id="searchInput" class="form-control"
                                placeholder="Search by voucher, venue, county, date, etc..." />
                         <button type="button" id="clearBtn" class="btn btn-outline-secondary">
                             <i class="bi bi-x-circle"></i> Reset
                         </button>
                     </div>
                 
                     <!-- Action buttons with spacing -->
                     <div class="d-flex gap-2 ms-3">
                         <a asp-action="Create" class="btn btn-primary">
                             <i class="bi bi-plus-circle me-1"></i> Create New
                         </a>
                         <a asp-action="VoucherList" class="btn btn-outline-primary">
                             <i class="bi bi-collection"></i> Voucher Summaries
                         </a>
                     </div>
                 </div>
              </div>
        </div>

        <!--  Data Table -->
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0" id="summaryTable">
                        <thead class="table-primary">
                            <tr>
                                <th> </th>
                                <th>@Html.DisplayNameFor(model => model.Date)</th>
                                <th>Voucher No.</th>
                                <th>@Html.DisplayNameFor(model => model.Venue)</th>
                                <th>Hall Hire (Ksh)</th>
                                <th>Farmers (Ksh)</th>
                                <th>EATotal (Ksh)</th>
                                <th>Venue (Ksh)</th>
                                <th>Payment Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                foreach (var item in Model.OrderByDescending(m => m.Date))
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-underline text-primary">
                                                 Select
                                            </a>
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Voucher.VoucheName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Venue)</td>
                                        <td>@Html.DisplayFor(modelItem => item.HallHireTotal)</td>
                                        <td>@Html.DisplayFor(modelItem => item.LeadFarmersTotal)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EATotal)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SubTotalperVenue)</td>
                                        <td>
                                            @if (item.status == Reports.Models.PaymentStatus.Paid)
                                            {
                                                <span class="badge bg-success">Paid</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Unpaid</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"
                                                   onclick="return confirm('Are you sure you want to delete this voucher?');">
                                                    <i class="bi bi-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="19" class="text-center py-4 text-muted">
                                        <i class="bi bi-inbox"></i> No records found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const searchInput = document.getElementById("searchInput");
        const clearBtn = document.getElementById("clearBtn");
        const rows = document.querySelectorAll("#summaryTable tbody tr");

        // 🔍 Filter rows as user types
        searchInput.addEventListener("keyup", function () {
            const value = this.value.toLowerCase();
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(value) ? "" : "none";
            });
        });

        // ❌ Reset search
        clearBtn.addEventListener("click", function () {
            searchInput.value = "";
            rows.forEach(row => row.style.display = "");
            searchInput.focus();
        });
    </script>
}
