@model IEnumerable<Reports.Models.PaymentVoucher>

@{
    ViewData["Title"] = "Voucher Reports";
    var counter = 1;
    var vouchers = Model.OrderByDescending(v => v.Date).ToList();
}

<style>
    .table td,
    .table th {
        padding: 2px 6px !important; /* tighter vertical & horizontal padding */
        font-size: 12px;
        line-height: 1.1; /* reduce row height */
    }

    .table tbody tr {
        height: auto !important; /* allow shrink */
    }

    .table > :not(caption) > * > * {
        padding: 2px 6px !important; /* override Bootstrap’s extra spacing */
    }
</style>

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-light border-bottom mb-3">
            <h2 class="mb-4 fw-semibold text-primary">
                <i class="bi bi-file-earmark-text"></i> 📄 Reports
            </h2>

            <!-- Search & Filter bar -->
            <div class="search-bar d-flex align-items-center gap-2 flex-wrap mb-3">
                <!-- Left side: Search + Filter -->
                <div class="d-flex flex-grow-1 gap-2">
                    <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="🔍 Search reports...">
                    <button type="button" id="clearBtn" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </button>
                </div>

                <!-- Right side: Info + New Report button -->
                <div class="ms-auto d-flex align-items-center gap-3">
                    <a asp-action="Create" class="btn btn-sm btn-primary shadow-sm">
                        <i class="bi bi-plus-circle"></i> Generate Report
                    </a>
                </div>
            </div>
        </div>        
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-primary">
                    <tr class="text-secondary">
                        <th style="width: 60px;">No</th>
                        <th>Voucher No</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Summaries</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in vouchers)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@v.VoucherNumber</td>
                            <td>@v.VoucheName</td>
                            <td>@v.Date.ToString("dd MMM yyyy")</td>
                            <td>@(v.Summaries?.Count ?? 0)</td>
                            <td class="text-center">
                                <a asp-action="GenerateFullReport" asp-route-id="@v.PaymentVoucherId"
                                   class="btn btn-outline-success d-inline-flex align-items-center gap-1">
                                    <i class="bi bi-file-earmark-text"></i> Combined PDF
                                </a>
                            </td>
                        </tr>
                        counter++;
                    }
                </tbody>
            </table>
        <div class="card-footer text-muted small">
            Showing <strong>@vouchers.Count</strong> voucher reports
        </div>
    </div>
</div>

<!-- 🔽 Search & Clear Script -->
<script>
    const searchInput = document.getElementById("searchInput");
    const clearBtn = document.getElementById("clearBtn");
    const rows = document.querySelectorAll("#voucherTable tbody tr");

    function filterRows() {
        let searchTerm = searchInput.value.toLowerCase();
        rows.forEach(row => {
            let rowText = row.innerText.toLowerCase();
            row.style.display = rowText.includes(searchTerm) ? "" : "none";
        });
    }

    searchInput.addEventListener("keyup", filterRows);

    clearBtn.addEventListener("click", function () {
        searchInput.value = "";
        filterRows(); // reset table
        searchInput.focus();
    });
</script>
