@model Reports.Models.PaymentVoucher

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Payment Voucher</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.VoucherNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.VoucherNumber)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.ChequeNo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ChequeNo)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Date)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.PaymentMode)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentMode)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.PaymentInFavourOf)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PaymentInFavourOf)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.TotalAmount)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TotalAmount)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.AmountInWords)</dt>
                <dd class="col-sm-9 fst-italic">@Html.DisplayFor(model => model.AmountInWords)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.PreparedBy)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PreparedBy)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.CheckedBy)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CheckedBy)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.ApprovedBy)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ApprovedBy)</dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="PaymentVoucherId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
