@model Reports.Models.UserAccount

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete User</h3>
        </div>

        <div class="card-body">
            <h5 class="text-center text-danger mb-4">
                Are you sure you want to delete this account?
            </h5>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.Username)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Username)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Email)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.FullName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.FullName)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.PhoneNumber)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.PhoneNumber)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.Role)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.Role)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.CreatedAt)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.CreatedAt)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.UpdatedAt)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.UpdatedAt)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(m => m.LastLoginAt)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.LastLoginAt)</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" class="m-0">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </form>

            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
